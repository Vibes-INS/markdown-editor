.dialog
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  border none
  background-color rgba(0, 0, 0, 0)

.closing
  animation dialog-main-hide 0.3s ease-out

.dialog .mask
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.1)
  animation dialog-mask-show 0.2s

.dialog .main
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  padding 10px 10px 80px
  box-shadow var(--shadow-2)
  border-radius 10px
  border none
  width 90%
  max-width 800px
  min-height 250px
  background-color var(--dialog-background-color-1)
  color var(--font-color-1)
  animation dialog-main-show 0.3s ease-out
  user-select none

  .img-group
    display flex
    padding 10px 0 10px
    justify-content space-between
    flex-wrap wrap
    height 500px
    overflow auto

  .img-container
    display inline-flex
    flex-direction column

  .img
    width auto
    max-height 200px
    margin 10px 10px
    cursor pointer

@keyframes dialog-mask-show
  0%
    opacity 0

@keyframes dialog-main-show
  0%
    opacity 0
    transform translate(-50%, -60%)

  100%
    transform translate(-50%, -50%)

@keyframes dialog-main-hide
  0%
    opacity 1
    transform translate(-50%, -50%)

  100%
    opacity 0
    transform translate(-50%, -40%)

.footer {
  position absolute
  bottom 0
  left 0
  width 100%
  height 60px
  border-top 1px solid var(--line-color-1)
  display flex
  justify-content flex-end
}
